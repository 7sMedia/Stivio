{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "styles/*": ["styles/*"],
      "@components/*": [
        "app/components/*",
        "app/(protected)/ai-tool/components/*"
      ],
      "@lib/*": ["lib/*"],
      "@ui/*": ["components/ui/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app",
    "components",
    "lib",
    "styles"
  ],
  "exclude": ["node_modules"]
}
